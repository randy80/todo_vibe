{
  "name": "todo-monorepo",
  "version": "1.0.0",
  "description": "Todo List Monorepo with Vue.js 3 Frontend and Spring Boot Backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:backend": "cd backend && ./mvnw spring-boot:run",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./mvnw clean package",
    "install:all": "npm install && cd frontend && npm install",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && ./mvnw test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/randy80/todo_vibe.git"
  },
  "keywords": [
    "todo",
    "monorepo",
    "vue",
    "spring-boot",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/randy80/todo_vibe/issues"
  },
  "homepage": "https://github.com/randy80/todo_vibe#readme",
  "dependencies": {
    "@types/axios": "^0.9.36",
    "axios": "^1.11.0"
  }
}
